<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.hudsonclark.pouroverplus"
    android:versionCode="1"
    android:versionName="1.0"
    android:windowSoftInputMode="adjustResize" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.hudsonclark.pouroverplus.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.hudsonclark.pouroverplus.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="me.hudsonclark.pouroverplus.Home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.hudsonclark.pouroverplus.Home" />
        </activity>
    </application>

</manifest>